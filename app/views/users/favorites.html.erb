<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render partial:'shared/user_info', locals: {user: @user} %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render partial: 'follow_form', locals: { user: @user } if logged_in? %>
    <h3>Favorites (<%= @user.favorites.count %>)</h3>
    <div id="microposts">
    <%= render partial: 'shared/micropost', locals: { microposts: @microposts } %>
    </div>
  </div>
</div>